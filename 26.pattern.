#include <stdio.h>
int main()
{
    int n;
    printf("ARAVINTH \n 192210579");
	printf("Enter the no of rows:");
    scanf("%d",&n);
    for (int i = 1; i <= n; i++) {
        for (int j = 0; j < n - i; j++) {
            printf(" ");
        }
        for (int j = 1; j <= i; j++) {
            printf("%d ", j);
        }
        printf("\n");
    }
	return 0;
}
